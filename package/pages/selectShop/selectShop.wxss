/* package/pages/selectShop/selectShop.wxss */
page{
  background:#F6F6F6;
}
/* ------------------------------------------------- */

/* ----------------------搜索框---------------------- */
.selectCity{/* 搜索框 */
  width: 95%;
  height: 50rpx;
  background: white;
  margin: 30rpx auto;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
}
.city{/* 城市 */
  height: 100%;
  margin-left: 15rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.city image{/* 城市选择 */
  width: 35rpx;
  height: 35rpx;
  margin-left: 10rpx;
}
.line_between{/* 分割线 */
  font-size: 22rpx;
  margin: 0 15rpx 0 15rpx;
}
.search{/* 搜索框盒子 */
  height: 100%;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}
.search image{/* 搜索图片 */
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.search view{/* 输入框盒子 */
  height: 40rpx;
  display: flex;
  align-items: center;
}
.search input{/* 输入框 */
  color: #6B6B6B;
}
/* ------------------------------------------------- */

/* ---------------------选择门店--------------------- */
.selectShop{/* 店铺盒子 */
  width: 95%;
  margin: 0 auto;
}
.shop{/* 店铺 */
  width: 100%;
  height: 180rpx;
  background: white;
  margin-bottom: 20rpx;
  position: relative;
}
.currentShop{/* 当前选择 */
  width: 80rpx;
  height: 25rpx;
  font-size: 16rpx;
  text-align: center;
  line-height: 25rpx;
  border-radius: 0 0 0 10rpx;
  background: #CAD2ED;
  color: #324390;
  position: absolute;
  top: 0;
  right: 0;

}
.shopName{/* 店铺名 */
  display: flex;
  align-items: center;
  padding: 25rpx 0 0 20rpx;
}
.shopName view:nth-of-type(1){/* 瑞辛咖啡标 */
  width: 100rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  font-size: 22rpx;
  background: #0028AB;
  color: white;
  margin-right: 10rpx;
}
.shopName view:nth-of-type(3){/* 距离 */
  flex: 1;
  color: #6B6B6B;
  font-size: 26rpx;
  margin-right: 15rpx;
  text-align: right;
}
.business_hours,.location{/* 营业时间、地址 */
  font-size: 24rpx;
  color: #6B6B6B;
  display: flex;
  align-items: center;
  margin: 5rpx 0 0 10rpx;
}
.business_hours view:nth-of-type(1),.location view:nth-of-type(1){/* 营业时间、地址icon盒子 */
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.business_hours image{/* 营业时间icon */
  width: 100%;
  height: 100%;
}
.location image{/* 地址icon */
  width: 70%;
  height: 70%;
}
.location view:nth-of-type(3){/* 地图导航 */
  flex: 1;
  color: #0028AB;
  text-align: right;
  margin-right: 15rpx;
}
.hint{/* 末尾提示文本 */
  text-align: center;
  font-size: 22rpx;
  color: #6B6B6B;
  margin: 0 auto;
  margin-top: -10rpx;
}