/* package/pages/login/login.wxss */
page{
  background: #F6F6F6;
}
.login{/* 登录父盒子 */
  width: 95%;
  height: 60vh;
  border-radius: 10rpx;
  margin: 20rpx auto;
  background: white;
}
.login image{/* 登录图片 */
  width: 100%;
  margin-top: 20rpx;
}
.login view{/* 登录按钮 */
  height: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.login view text{/* 按钮文字 */
  width: 80%;
  height: 70rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}
.login view text:nth-of-type(1){/* 第一个按钮 */
  background: #0028AC;
}
.login view text:last-child{/* 第二个按钮 */
  background:#2FAD38;
  margin-top: 60rpx;
}
.agreement{/* 协议父盒子 */
  width: 97%;
  height: 50rpx;
  position: fixed;
  bottom: 80rpx;
  left: 0;right: 0;
  margin: auto;
  display: flex;
  align-items: center;
}
.agreement view:first-child{/* 协议按钮 */
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  text-align: center;
  line-height: 30rpx;
  margin-right: 15rpx;
  border: 1px solid #D4D4D4;
  color: white;
}
.agreementBtnAcitve{/* 协议按钮激活样式 */
  background: #7690D0;
}
.agreement view:last-child{/* 协议文字 */
  font-size: 22rpx;
}
.agreement view:last-child text{/* 协议 */
  color: #0028AC;
}
.hint{/* 提示文本 */
  width: 400rpx;
  height: 70rpx;
  border-radius: 10rpx;
  color: white;
  background: #4C4C4C;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;bottom: 0;right: 0;left: 0;
  margin: auto;
}